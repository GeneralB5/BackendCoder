<div>
    <h1>Tienda E-commerce</h1>
    {{#if userName }}
    <h2>Bienvenido {{userName}} {{userLastname}} </h2>
    {{/if}}
    {{#if isAdmin}}
        {{#each products}}
        <div>
            <h2>Name: {{this.title}}</h2>
            <p>price: {{this.price}}</p>
            <p>stock: {{this.stock}}</p>
            <p>description: {{this.description}}</p>
        </div>
        <hr>
        {{/each}}
    {{else}}
        <h2>No puedes ver los productos</h2>
    {{/if}}
    <div class="text-center">
    {{#if hasPrevPage}}
        <a href="/api/productos/gets?numPage={{prevPage}}&limit={{limit}}" class="btn btn-outline-dark">Anterior</a>
    {{/if}}
    <label>{{page}}</label>
    {{#if hasNextPage}}
        <a href="/api/productos/gets?numPage={{nextPage}}&limit={{limit}}" class="btn btn-outline-dark">Siguiente</a>
    {{/if}}
    <form action="../session/logout" method="POST"><input type="submit" value="Logout"></form>
</div>
</div>